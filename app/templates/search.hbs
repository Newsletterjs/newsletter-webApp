<h1>Search</h1>

<form class="form form-search">
  <div class="form-group">
    <label for="exampleInputEmail1">Search for newsletters</label>
    {{input class="form-control" name="search" type="text" value=search}}
  </div>
</form>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredNewsletters as |newsletter|}}
      <tr>
        <td>{{newsletter.name}}</td>
        <td>
          {{#link-to 'user.newsletter' newsletter.creator.username newsletter.id class="btn btn-default"}}
            View
          {{/link-to}}
          {{
            subscription-btn
            modelId=newsletter.id
            isSubscribed=newsletter.isSubscribed
          }}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>